<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF5CA"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/resta"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#160FD1"
        android:text="@string/resta"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/division"
        android:layout_width="163dp"
        android:layout_height="79dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#D12626"
        android:text="@string/division"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resta"
        app:layout_constraintVertical_bias="0.184" />

    <Button
        android:id="@+id/multiplicacion"
        android:layout_width="171dp"
        android:layout_height="78dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/material_dynamic_neutral60"
        android:text="@string/multiplicacion"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/division"
        app:layout_constraintTop_toBottomOf="@+id/suma"
        app:layout_constraintVertical_bias="0.198" />

    <Button
        android:id="@+id/suma"
        android:layout_width="157dp"
        android:layout_height="73dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#E6FF3EEC"
        android:text="@string/suma"
        android:textColorHighlight="#A4FF41FC"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toStartOf="@+id/resta"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="288dp"
        android:layout_height="125dp"
        android:hint="    Resultado"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.234" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="226dp"
        android:layout_height="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/numero_dos"
        android:inputType="number"
        android:textColorHint="#8D6E63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/num1"
        android:layout_width="229dp"
        android:layout_height="62dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/numero_uno"
        android:inputType="number"
        android:textColorHint="#8D6E63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textResultado" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="108dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@drawable/baseline_calculate_24" />

</androidx.constraintlayout.widget.ConstraintLayout>